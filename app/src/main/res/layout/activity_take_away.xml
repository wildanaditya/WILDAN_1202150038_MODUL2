<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.WILDANADITYA_1202150038_SI3906.TakeAway">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_logo"
        android:text="Identitas Pemesan:"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/et_Name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Name"/>
    <EditText
        android:id="@+id/et_Phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:inputType="phone"
        android:hint="Phone"/>
    <EditText
        android:id="@+id/et_Address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Address"/>
    <EditText
        android:id="@+id/et_Note"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Note"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:text="Pilih tanggal dan waktu : " />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="10sp"
            android:background="@color/colorAccent"
            android:onClick="onDate"
            android:padding="@dimen/padding_button"
            android:text="PILIH TANGGAL"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="10sp"
            android:background="@color/colorAccent"
            android:onClick="onTime"
            android:padding="@dimen/padding_button"
            android:text="PILIH WAKTU"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="@color/colorAccent"
        android:onClick="onClickOrder"
        android:padding="@dimen/padding_button"
        android:text="PILIH PESANAN"
        android:textColor="@android:color/background_light" />
</LinearLayout>
